@model Payroll.Models.EmployeePayComponent

@{
    ViewData["Title"] = "Change employee details";
}

    <form asp-action="AddOrUpdateCompensation" data-ajax="true" data-ajax-method="POST" data-ajax-update="#employee-content" data-ajax-success="sendNotification('success', 'Employee compensation was just updated');" id="employeeCompensationInfoCreateForm" data-ajax-failure="handleModalPostFailure">
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />
        <input asp-for="EmployeeId" type="hidden" />
        <header class="modal__header">

            <h2 class="modal__title" id="modal-1-title">
                @if (Model != null)
                {
                    <a class="modal__btn modal__btn-back" data-ajax="true" data-ajax-update=".modal__container" data-ajax-begin="showModal()" asp-action="AddOrUpdate" asp-controller="Employee" asp-route-id="@Model.Id" >
                        <i class="fa fa-arrow-left"></i>
                    </a>
                }
                @(Model.Id ==0 ? "Create" : "Update") Compensation
                <br />
                <small></small>
            </h2>
            <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
        </header>
        <main class="modal__content" id="modal-1-content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PayAdjustmentId" class="control-label">Pay Adjustment</label>
                <select asp-items="ViewBag.PayAdjustmentId" asp-for="PayAdjustmentId" class="form-control"><option value="0">Choose Adjustment</option></select>
                <span asp-validation-for="PayAdjustmentId" class="text-danger"></span>
            </div>

            <div class="row">

                <div class="form-group col">
                    <label asp-for="EffectiveDate" class="control-label"></label>
                    <input asp-for="EffectiveDate" type="text" class="form-control has-datepicker" />
                    <span asp-validation-for="EffectiveDate" class="text-danger"></span>
                    @*<label asp-for="PayFrequency" class="control-label">Pay Frequency</label>
                <select asp-for="PayFrequency" class="form-control" asp-items="@Html.GetEnumSelectList<PayFrequency>()"></select>
                <span asp-validation-for="PayFrequency" class="text-danger"></span>*@
                </div>

                <div class="form-group col">
                    <label asp-for="Total" class="control-label"></label>
                    <input asp-for="Total" type="text" class="form-control" />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>

            </div>

        </main>
        <footer class="modal__footer">
            <button class="modal__btn modal__btn-primary">Save</button>
            <button class="modal__btn" data-micromodal-close aria-label="Close this dialog window">Close</button>
        </footer>

    </form>


    <script>
        initDatePicker();
    </script>