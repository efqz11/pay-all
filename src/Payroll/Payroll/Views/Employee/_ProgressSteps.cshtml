    <li data-step="3" class="progress-bar-item @(Model >= 4 ? "complete" : "incomplete")"><div class="progress-bar-item-content">Emergency Contact</div></li>
    <li data-step="4" class="progress-bar-item @(Model >= 5 ? "complete" : "incomplete")"><div class="progress-bar-item-content">Bank details</div></li>
    <li data-step="4" class="progress-bar-item @(Model >= 6 ? "complete" : "incomplete")"><div class="progress-bar-item-content">Employment</div></li>
    <li data-step="4" class="progress-bar-item @(Model >= 7 ? "complete" : "incomplete")"><div class="progress-bar-item-content">Pay components</div></li>
</ol>

