@model List<Payroll.Models.JobScrape.Jobsicle_Job>
@{
    Layout = null;
    var enumLlist = Html.GetEnumSelectList<VariationType>().Select(s => new { s.Text, s.Value }).ToList();
}

<style>
    /* fluid 5 columns */
    .grid-sizer,
    .grid-item {
        width: 25%;
        font-size: 62.5%;
    }
    /* 2 columns */
    .grid-item--width2 {
        width: 40%;
    }
</style>

<div class="grid">
    <!-- width of .grid-sizer used for columnWidth -->
    <div class="grid-sizer"></div>

    @foreach (var item in Model)
    {
        <div class="grid-item">
            <div class="card">
                <div class="card__wrap">
                    <label class="card__bookmark">
                        <input name="bookmark" type="checkbox" />
                        <i class="ion ion-heart"></i>
                    </label>
                    <div class="card__thumbnail" style="background-image: url(@item.company_logo);">

                        <a href="#"></a>
                    </div>
                    <div class="card__content">
                        <div class="card__header">
                            <div class="card__meta">
                                <div class="card__date">posted on: @((item.updated_at ?? item.created_at)?.ToString("dd MMMM yyyy"))</div>
                            </div>
                            <a class="card__title" href="#">@item.title</a>
                        </div>
                        <div class="card__excerpt no">
                            @item.description.Substring(0, 50)
                        </div>
                        <div class="card__footer">
                            <span class="card__favorite-counts"><i class="ion ion-heart"></i>34</span>
                            <span class="card__comment-counts"><i class="ion ion-chat"></i>32</span>
                            <a class="card__more" href="#"><i class="ion ion-more"></i>Read more</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
    <div class="grid-item"></div>
    <div class="grid-item grid-item--width2"></div>
    
</div>

@section  scripts {
}
