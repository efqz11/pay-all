@model List<PayrollPeriod>
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

<div class="row">
    <div class="col-md-4">
        <div class="text-lg-left">
            <h4 class="">@FeatureMenus.GetFeatureMenuItem(FeatureMenus.MenuItem.Payroll) Payroll</h4>
            <p>Total @Model.Count Pay periods(s)</p>
        </div>
    </div>
    <div class="col-md-8">
        <div class="filters float-right">
            <form asp-action="Index" style="display: inline-flex;" id="rosterFilterForm">
                <input type="hidden" name="start" id="start" />
                <input type="hidden" name="end" id="end" />
                <div class="form-group">
                    <label class="control-label text-muted">Pay Period</label>
                    <input name="text" id="datefilter" class="form-control form-control-sm" value="@ViewBag.CurrentRangeDisplay" />
                </div>
                <div class="form-group ml-2">
                    <label class="control-label text-muted">Status</label>
                    <select name="limit" id="limit" class="form-control form-control-sm" onchange="submitFIlterForm()">
                        <option value="All">All</option>
                        <option value="Created">Created</option>
                        <option value="On Going">On Going</option>
                        <option value="Completed">Completed</option>
                    </select>
                </div>
                <div class="form-group ml-2">
                    <label class="control-label text-muted">Limit</label>
                    <select name="limit" id="limit" class="form-control form-control-sm" onchange="submitFIlterForm()">
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
                <div class="form-group ml-2">
                    <label class="control-label text-muted">Sort</label>
                    <select name="sort" id="sort" class="form-control form-control-sm" onchange="submitFIlterForm()">
                        <option value="None">None</option>
                        <option value="Recent">Recent</option>
                        <option value="Archived">Archived</option>
                    </select>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">

    <table class="table table-hover data-container-table">
        @*<thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Net Salary</th>
                <th>Net Salary Last</th>
                <th>State</th>
                <th></th>
            </tr>
        </thead>*@
        <tbody>
            <tr>
                <td class="text-right"></td>
                <td colspan="5" style="vertical-align:middle">
                    <p class="mb-0"><a class="float-left btn btn-primary" asp-action="AddOrUpdate"> <i class="fad fa-plus-circle"></i> Create Next Period</a></p>
                </td>
            </tr>
            @foreach (var item in Model.OrderByDescending(a => a.StartDate))
            {
                <tr>
                    <td class="text-right" width="20px">
                        <a asp-action="AddOrUpdate" asp-route-id="@item.Id" class="btn-link table-tr-toggler" role="tooltip" data-microtip-position="top" aria-label="Edit payrol" style="display:none"><i class="fad fa-edit"></i></a>
                    </td>
                    <td>
                        <h3><a role="tooltip" data-microtip-position="top" aria-label="View Master Sheet" asp-action="View" asp-route-id="@item.Id"><b>@item.Name</b></a></h3>
                        <span class="text-secondary">@item.StartDate.ToSystemFormat(User) &mdash; @item.EndDate.ToSystemFormat(User)</span>
                    </td>
                    <td><p class="mb-0">MVR @item.GrossPay.ToSystemFormat(User)</p>
                    <small class="text-muted" title="@item.GrossPayLastPeriod">Gross Pay @Html.Raw(item.GetPercentChangeString(item.GrossPayLastPeriod, item.GrossPay, User))</small></td>
                    <td><p class="mb-0">MVR @item.NetSalary.ToSystemFormat(User)</p>
                    <small class="text-muted" title="@item.NetSalaryLastPeriod">Net Pay  @Html.Raw(item.GetPercentChangeString(item.NetSalaryLastPeriod, item.NetSalary, User))</small></td>
                    <td>
                        <partial name="_DisplayRequestStatus" model="@item.Status" />
                    </td>
                    <td width="20px">
                        <a asp-action="Remove" asp-route-id="@item.Id" data-ajax="true" role="tooltip" data-microtip-position="top" aria-label="Remove payrol" data-ajax-method="Post" data-ajax-confirm="Are you sure?" data-ajax-success="location.reload()" class="table-tr-toggler"  style="display:none"><i class="fad fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{

    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script>
        var limit = '@ViewBag.limit';
        if (limit)
        $('#limit').val(limit);

        var empId = '@ViewBag.empId';
        if (empId)
        $('#empId').val(empId);

        var sort = '@ViewBag.sort';
        if (sort)
        $('#sort').val(sort);

        var type = '@ViewBag.type';
        if (type)
        $('#type').val(type);

        function submitFIlterForm() { $('#rosterFilterForm').submit() }

        $('input[name="date"]').on('apply.daterangepicker', function (ev, picker) {
            submitFIlterForm();
        });

        $('#datefilter').daterangepicker({
            autoUpdateInput: false,
            locale: {
                cancelLabel: 'Clear'
            },
            opens: 'bottom',

            ranges: {
                'This Week': [moment().startOf('week'), moment().endOf('week')],
                'Last Week': [moment().subtract(1, 'week').startOf('week'), moment().subtract(1, 'week').endOf('week')],
                'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                'This Month': [moment().startOf('month'), moment().endOf('month')],
                'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
            }
        });


        $('#datefilter').on('apply.daterangepicker', function (ev, picker) {
            console.log(picker);

            var date = picker.startDate.format('MM/DD/YYYY HH:mm:ss');
            var end = picker.endDate.format('MM/DD/YYYY HH:mm:ss');
            var url = GetAppRootPath() + '/Schedule?date=' + date + '&end=' + end;
            $('#start').val(date);
            $('#end').val(end);

            $(this).val(picker.startDate.format('MMM DD') + ' - ' + picker.endDate.format('DD, YYYY'));

        });
    </script>
}