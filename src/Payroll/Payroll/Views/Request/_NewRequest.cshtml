@model Request

<style>
    .selected{
        background-color: #28a745 !important;
        color:white;
        opacity:1 !important;
    }
    .rq-type{cursor: pointer}
    .rq-type div{opacity:0.7}
    .rq-type div:hover,
    .rq-type div:active,
    .rq-type div:focus{
        opacity:1;
    }
</style>
    <form asp-action="NewRequest" asp-controller="Request" data-ajax="true" data-ajax-method="POST" data-ajax-update=".modal__container" data-ajax-begin="showModal()" id="addNewRequest_JumboTrons" data-ajax-failure="handleModalPostFailure">
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" value="@Model.Id"/>
        <input asp-for="AttendanceId" type="hidden" />
        <input asp-for="EmployeeId" type="hidden" />
        <input asp-for="RequestType" type="hidden" />
        <header class="modal__header">
            <h2 class="modal__title" id="modal-1-title">
                Choose Request Type
            </h2>
            <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
        </header>
        <main class="modal__content" id="modal-1-content">
            @*<div class="form-group">
                <label class="control-label">Choose Request Type</label>
            </div>*@

            <div class="row">
                <div class="col-md-4 rq-type" data-type="@RequestType.Leave">
                    <div class="text-center bg-light border-0 p-3" style="border-radius:5px">
                        <i class="ion ion-flag fa-2x mb-2"></i>
                        <br />
                        <span>Leave Request Applications</span>
                    </div>
                </div>
                <div class="col-md-4 rq-type" data-type="@RequestType.Overtime">
                    <div class="text-center bg-light border-0 p-3" style="border-radius:5px">
                        <i class="ion ion-clock fa-2x mb-2"></i>
                        <br />
                        <span>Overtime Request</span>
                    </div>
                </div>
                <div class="col-md-4 rq-type" data-type="@RequestType.Document">
                    <div class="text-center bg-light border-0 p-3" style="border-radius:5px">
                        <i class="ion fa fa-file-archive fa-2x mb-2"></i>
                        <br />
                        <span>Document Request</span>
                    </div>
                </div>
            </div>
            @*<br />
            <div class="row">
                
                <div class="col-md-4 rq-type" data-type="@RequestType.Attendance_Change">
                    <div class="text-center bg-light border-0 p-3" style="border-radius:5px">
                        <i class="ion ion-android-calendar fa-2x"></i>
                        <br />
                        <small>Attendance Applications</small>
                    </div>
                </div>
                <div class="col-md-4 rq-type" data-type="@RequestType.Work_Change">
                    <div class="text-center bg-light border-0 p-3" style="border-radius:5px">
                        <i class="ion ion-ios-briefcase fa-2x"></i>
                        <br />
                        <small>Work Change Applications</small>
                    </div>
                </div>
                <div class="col-md-4 rq-type" data-type="@RequestType.Work_Submission">
                    <div class="text-center bg-light border-0 p-3" style="border-radius:5px">
                        <i class="fa fa-tasks fa-2x"></i>
                        <br />
                        <small>Work Item Submissions</small>
                    </div>
                </div>
            </div>*@
        </main>
        <footer class="modal__footer">
            <button type="submit" class="modal__btn modal__btn-primary"><i class="fas fa-file-import"></i> Submit</button>
            <button class="modal__btn" data-micromodal-close aria-label="Close this dialog window">Close</button>
        </footer>
    </form>


<script>
    $('.rq-type').click(function () {
        $('.rq-type div').removeClass('selected');
        $(this).find('div').addClass('selected');
        $("#RequestType").val($(this).data('type'));

        $('form#addNewRequest_JumboTrons').submit();
    });
</script>