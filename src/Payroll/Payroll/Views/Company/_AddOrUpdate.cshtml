@model CompanyAccount


<div class="row">
    <div class="layout-main-landing-header col-sm-12">
        <div class="relative">
            <div class="content-block-with-icon content-block-with-icon--icon-left flex-items-center flex-row">
                @*<img class="zp-icon-image large content-block-with-icon__icon hidden-xs flex-self-start" src="https://d3bnlkto289wdc.cloudfront.net/assets/packs/media/illustrations/illo-map-288f54db.svg" alt="">*@
                <div class="content-block-with-icon__content">
                    <h1 class="page-title margin-top-none margin-bottom-none">
                        Add company profile
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>

<ol class="progress-bar-tabs progress-bar-style-default">
    <li data-step="1" class="progress-bar-item incomplete"><div class="progress-bar-item-content">Profile</div></li>
    <li data-step="2" class="progress-bar-item incomplete"><div class="progress-bar-item-content">Registration</div></li>
    <li data-step="3" class="progress-bar-item incomplete"><div class="progress-bar-item-content">Location</div></li>
    <li data-step="4" class="progress-bar-item incomplete"><div class="progress-bar-item-content">Contact</div></li>
</ol>

<partial name="_ShowAlertMessage" />

<div class="row pt-3">
    <div class="col-sm-12 col-md-7 content">
        @*<form asp-action="Welcome" asp-controller="Account" class="gwb_3YnzF gwb_1gvhf gwb_1KWvf gwb_3Eve3 mb-3" id="welcomeForm" style="--autoRows:max-content; --rowGap:2.4rem; --maxWidth:65rem; --display:grid;">*@

        <form asp-action="AddOrUpdate" asp-controller="Company" data-ajax="true" data-ajax-method="POST" data-ajax-update="#main-content" data-ajax-success="sendNotification('success', 'Company details were just saved')" id="form" data-ajax-failure="handleModalPostFailure">
            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" value="@Model.Id" />
            <div aria-describedby="161f936f-f0c8-497d-9623-4d85dcd2f8cb" class="step" data-step="1">
                <h4 class="pb-4 fs-unmask">Tell us about your company</h4>


                <div class="form-group mb-5 no_cc">
                    <label class="font-weight-bold text-large mb-0">What is the name of your company?</label>
                    <input class="form-control form-control-lg" asp-for="Name" data-val="true" data-val-required="⚠️ Please name of your company" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group mb-4 no_cc">
                    <label class="font-weight-bold text-large mb-0">What is the official website of your company?</label>
                    <input class="form-control form-control-lg" asp-for="Website" />
                    <span class="text-danger" asp-validation-for="Website"></span>
                </div>
            </div>
            <div aria-describedby="161f936f-f0c8-497d-9623-4d85dcd2f8cb" class="step" data-step="2">
                <h4 class="pb-4 fs-unmask">
                    Tell us about your company's registration
                </h4>
                <div class="mt-2">
                    <div class="form-group mb-4 no_cc">
                        <label class="font-weight-bold text-large mb-0">What is your company's registration no.?</label>
                        <input class="form-control form-control-lg" asp-for="CompanyRegistrationNo" />
                        <span class="text-danger" asp-validation-for="CompanyRegistrationNo"></span>
                    </div>

                    <div class="form-group mb-4 no_cc">
                        <label class="font-weight-bold text-large mb-0">Who is the Managing Director in your company?</label>
                        <p class="text-weight-normal">
                            All employees who do not have a line manager, will be directly under managing director in your company
                        </p>
                        <input class="form-control form-control-lg" asp-for="ManagingDirector" data-val="true" data-val-required="⚠️ Please name of your company's managing director" />
                        <span class="text-danger" asp-validation-for="ManagingDirector"></span>
                    </div>
                </div>
            </div>

            <div aria-describedby="161f936f-f0c8-497d-9623-4d85dcd2f8cb" class="step" data-step="3">
                <h4 class="pb-4 fs-unmask">
                    Tell us about your company location
                </h4>
                <div class="mt-2">
                    <div class="form-group mb-4 no_cc">
                        <label class="font-weight-bold text-large mb-0">Filing & Mailing Address</label>
                        <input class="form-control form-control-lg mb-2" asp-for="Street1" data-val="true" data-val-required="⚠️ Please enter name of the street / location" />
                        <input class="form-control form-control-lg" asp-for="Street2" />
                        <span class="text-danger" asp-validation-for="Street1"></span>
                    </div>

                    <div class="form-group mb-4 no_cc">
                        <label class="font-weight-bold text-large mb-0">City</label>
                        <input class="form-control form-control-lg" asp-for="City" />
                        <span class="text-danger" asp-validation-for="City"></span>
                    </div>
                    <div class="form-group mb-4 no_cc">
                        <label class="font-weight-bold text-large mb-0">State</label>
                        <input class="form-control form-control-lg" asp-for="State" />
                        <span class="text-danger" asp-validation-for="State"></span>
                    </div>
                    <div class="form-group mb-4 no_cc">
                        <label class="font-weight-bold text-large mb-0">Zip</label>
                        <input class="form-control form-control-lg" asp-for="Zip" />
                        <span class="text-danger" asp-validation-for="Zip"></span>
                    </div>
                </div>
            </div>

            @*<div aria-describedby="161f936f-f0c8-497d-9623-4d85dcd2f8cb" class="step" data-step="3">
                    <h4 class="pb-4 fs-unmask">
