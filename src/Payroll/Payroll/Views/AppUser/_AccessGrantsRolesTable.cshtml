        console.log("next sibling => ", nextSibling);


        var url = GetAppRootPath() + '/Company/AddOrRemoveEmployeeToRole?cmpId=@cmp.Id&empId=' + empId + '&roleId=' + roleId;
        $.post(url).done(function () {
