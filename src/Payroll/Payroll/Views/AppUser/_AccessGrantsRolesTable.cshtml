    function updateMemeberCount(col) {
        var total = $(col).find('.list-group-item:visible').length;
        $(col).find('.member-count').text(total);

        if ($(col).hasClass('ass'))
            $('.list-group-roles .list-group-item.active .member-count').text(total);
    }


    
</script>


