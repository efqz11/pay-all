
@{
    TempData["Title"] = "Change employee details";
    var icon = TempData["alert.type"] == "success" ? "fa-check-circle" : "fa-info-circle";
    var hasAlert = TempData["alert"] != null || TempData["alert"] != null;
}


@if (hasAlert)
{
<div class="form-group">
    <div class="alert alert-@(TempData["alert.type"]) alert-dismissible fade show" role="alert">
        @*<i class="fa @icon text-@(TempData["alert.type"])"></i>*@
        @(TempData["alert.message"] ?? TempData["alert.message"])
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>
}